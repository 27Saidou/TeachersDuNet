<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<TextView
    android:id="@+id/tvAfficheur"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/nbre_copines_actuel"
    android:layout_gravity="center"
    android:gravity="center"
    android:textSize="40sp"
    android:textColor="#00F"
    android:textStyle="bold"
    />
    <Button
        android:id="@+id/bNewCopine"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/new_girl"
        android:onClick="addCopine"
        />
    <Button
        android:id="@+id/bNewEx"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/new_ex"
        android:onClick="delCopine"
        />


</LinearLayout>
